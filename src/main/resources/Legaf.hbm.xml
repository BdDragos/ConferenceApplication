<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="repository.FileRepository$Pair" table="legaf">
        <meta attribute="class-description">
            This class contains the details of the file.
        </meta>
        <id name="idPrimary" type="int" column="idaf">
            <generator class="native"/>
        </id>
        <property name="idD" column="idf" type="int"/>
        <property name="idO" column="ida" type="int"/>
    </class>
</hibernate-mapping>